{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "rootDir": "src", 
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "strict": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "typeRoots": ["./node_modules/@types/", "./@types"]
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}