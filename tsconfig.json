{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["esnext"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "pretty": true,
    "typeRoots": ["./node_modules/@types/", "./@types"]
  },
  "exclude": ["node_modules", ".vscode-test"]
}
