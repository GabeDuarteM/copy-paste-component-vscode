{
  "name": "copy-paste-component-vscode",
  "displayName": "Copy paste component",
  "description": "An extension to create/generate components, by copying and pasting existing ones.",
  "homepage": "https://github.com/GabrielDuarteM/copy-paste-component-vscode",
  "author": "Gabriel Duarte <gabrielqduarte@gmail.com> (https://github.com/GabrielDuarteM/)",
  "icon": "assets/icon.png",
  "version": "1.0.1",
  "publisher": "GabrielDuarteM",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GabrielDuarteM/copy-paste-component-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/GabrielDuarteM/copy-paste-component-vscode/issues"
  },
  "categories": [
    "Other",
    "Languages",
    "Snippets"
  ],
  "keywords": [
    "generator",
    "component",
    "copy",
    "scaffold",
    "boilerplate"
  ],
  "galleryBanner": {
    "color": "#21252b",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.19.0"
  },
  "activationEvents": [
    "onCommand:extension.cpc"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.cpc",
        "title": "Copy and paste component"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.cpc",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "cz": "git-cz",
    "precommit": "yarn build:ci",
    "semantic-release": "semantic-release",
    "start": "yarn watch",
    "vscode:prepublish": "yarn lint && yarn build",
    "build": "tsc -p ./",
    "build:ci": "yarn vscode:prepublish",
    "watch": "yarn build -watch",
    "lint": "tslint -p tsconfig.json -t code-frame",
    "lint:fix": "yarn lint --fix",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release": {
    "verifyConditions": [
      "semantic-release-vsce",
      "@semantic-release/github"
    ],
    "prepare": [
      "semantic-release-vsce"
    ],
    "publish": [
      {
        "path": "semantic-release-vsce",
        "packageVsix": "copy-paste-component-vscode.vsix"
      },
      {
        "path": "@semantic-release/github",
        "assets": "copy-paste-component-vscode.vsix"
      }
    ],
    "analyzeCommits": {
      "releaseRules": [
        {
          "type": "docs",
          "scope": "README",
          "release": "patch"
        }
      ]
    }
  },
  "devDependencies": {
    "@semantic-release/git": "6.0.1",
    "@semantic-release/github": "^4.2.18",
    "@types/node": "^10.5.1",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "prettier": "^1.13.7",
    "semantic-release": "^15.6.0",
    "semantic-release-vsce": "https://github.com/GabrielDuarteM/semantic-release-vsce",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-consistent-codestyle": "^1.13.1",
    "tslint-immutable": "^4.6.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "copy-paste-component": "^2.0.1",
    "vscode": "^1.1.18"
  }
}
